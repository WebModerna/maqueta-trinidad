@import url(normalizador.css)
/*Las variables*/
blanco = rgb(235,223,250)
gris = rgb(72,68,70)
naranjarogizo = rgb(235,50,20)
naranjatransparente = rgba(235,50,20,0.7)
negro = #414141
negro_transparente  = rgba(0,0,0,0.5)

/*Las Funciones*/
border-radius()
	border-radius arguments
	-o-border-radius arguments
	-ms-border-radius arguments
	-moz-border-radius arguments
	-webkit-border-radius arguments
box-shadow()
	box-shadow arguments
	-o-box-shadow arguments
	-ms-box-shadow arguments
	-moz-box-shadow arguments
	-webkit-box-shadow arguments
text-shadow()
	text-shadow arguments
	-o-text-shadow arguments
	-ms-text-shadow arguments
	-moz-text-shadow arguments
	-webkit-text-shadow arguments
transform()
	transform arguments
	-o-transform arguments
	-ms-transform arguments
	-moz-transform arguments
	-webkit-transform arguments
transition()
	transition arguments
	-o-transition arguments
	-ms-transition arguments
	-moz-transition arguments
	-webkit-transition arguments
/*Los Prerender*/
@font-face
	font-family 'icomoon'
	src: url('data:application/x-font-ttf;charset=utf-8;base64,') format('truetype'), url('data:application/font-woff;charset=utf-8;base64,') format('woff');
	font-weight normal
	font-style normal
@font-face
	font-family 'Open Sans'
	font-style normal
	font-weight 400
	src: url('fonts/open-sans.eot')
	src: local('OpenSans'), url('fonts/open-sans.eot') format('embedded-opentype'), url('fonts/open-sans.ttf') format('truetype'), url('fonts/open-sans.svg#OpenSans') format('svg'), url('fonts/open-sans.woff') format('woff')
@font-face
	font-family 'Raleway'
	src: url('fonts/raleway.eot')
	src: local('Raleway'), url('fonts/raleway.eot') format('embedded-opentype'), url('fonts/raleway.woff') format('woff'),	url('fonts/raleway.ttf') format('truetype'), url('fonts/raleway.svg#Raleway') format('svg')
/*Las etiquetas*/
body
	background blanco
	color negro
	font-family 'Open Sans'
	font-size 16px
	text-align center

footer
	background naranjatransparente
	color blanco
	padding 1em
	
	ul
		box-shadow(0px 2px 0px blanco)
		margin: 1.2em auto;
		padding: 0.2em 0 0 0;

		li
			display inline-block
			font-family 'icomoon'
			
			a
				color blanco
				display block
				font-size 1.5em
				padding 0 0.3em
				text-decoration none
				text-shadow(0px -1px 0px rgba(0,0,0,0.25))
				transition(all 0.2s ease-in)

				&:focus
				&:hover
					color naranjarogizo
					text-shadow(0px 1px 0px rgba(255,255,255,0.25))
					transform(scale(1.3))

		.autor_fb a:before
			content "\e604"

		.autor_feed a:before
			content "\e601"
		
		.autor_google a:before
			content "\e603"

		.autor_linkedin a:before
			content "\e605"

		.autor_menu a:before
			content "\e606"

		.autor_tw a:before
			content "\e600"

		.autor_youtube a:before
			content "\e602"

	.ir_arriba
		background naranjatransparente
		bottom 0
		color blanco
		display inline-block
		padding 0.5em 1em
		position fixed
		right 0
		text-decoration none
		
		&:hover
			background naranjarogizo

header
	background naranjatransparente url('../img/llamaradas_phone.jpg') center top no-repeat
	background-size 100%
	padding 0
	font-family 'Raleway'

	a
		display inline-block
		
		figure
			margin 0 auto
			width 100px
		
			img
				width 100%

	div
		background naranjatransparente url('../img/llamaradas_phone.jpg') center top no-repeat
		background-size 100%
		padding 2em
		

	nav
		form
			float left
			margin 0.5em

			#campo_search
				border-radius(2em 0 0 2em)
				padding-left 1em
				width 100px

			#boton_search
				background blanco
				border 1px solid naranjarogizo
				border-radius(0 2em 2em 0)
				display block
				height 27px
				overflow hidden
				padding 0 0.3em

				img
					margin-bottom 3px
					width 15px

		ul
			height 0
			margin 0
			opacity 0
			padding 0
			transition(all 0.4s ease-in-out)
			visibility hidden
			
			li
				
				a
					background naranjarogizo
					color blanco
					display block
					font-size 1.2em
					padding 0.5em 1em
					text-align left
					text-decoration none
					transition(all 0.4s ease-in-out)

					&:before
						content "Â»"
						padding-right 1em

				a:hover
					background naranjatransparente
			
			.current-menu-item
			.current_page_item
				a
					background gris
		
		.boton_menu
			background naranjarogizo
			overflow hidden
			padding 0.2em 0.5em
			
			button
				background none
				border none
				float right
				display block

				img
					width 40px			


	h2
		color blanco
		font-size 2em
		font-weight lighter
		margin 0
		text-shadow(0px -1px 0px rgba(0,0,0,0.25))

section
	.cycle-slideshow
		box-shadow(0px 0px 12px gris)
		height 200px
		margin 1em auto
		max-width 1200px
		position relative
		overflow hidden
		
		img
			width 100%
			
		.slideshow_navegacion
			font-size 2.5em
			position absolute
			top 40%
			overflow hidden
			width 100%
			z-index 123
			a
				border 1px solid blanco
				border-radius(50%)
				color blanco
				display inline-block
				padding 0 16px 10px 16px
				line-height 1em
				text-decoration none
				text-shadow(0px -1px 0px rgba(0,0,0,0.25))
				transition(all 0.3s ease-out)
				
				&:hover
					background negro_transparente
					color naranjarogizo
				
			.back
				float left
				margin-left 0.5em
			
			.next
				float right
				margin-right 0.5em

			

				
			
