@import url('normalizador.css')

/*Las variables*/
amarillo_claro = rgba(#FFFFaf, 0.7)
amarillo_patito = #FFFF66
azul = #007BC4
celeste = #21AECE
blanco = rgb(235,223,250)
blanco_transparente = rgba(255,255,255,0.5)
naranja = #E68C29
negro = #414141
negro_transparente  = rgba(0,0,0,0.6)
negruzco = rgba(0,0,0,0.35)
teal_claro = #006666
teal_oscuro = #003333
verde_claro = #6BAA58
verde_transparente = rgba(54,136,29,0.5)

/*Las Funciones*/
border-radius()
	border-radius arguments
	-o-border-radius arguments
	-ms-border-radius arguments
	-moz-border-radius arguments
	-webkit-border-radius arguments
box-shadow()
	box-shadow arguments
	-o-box-shadow arguments
	-ms-box-shadow arguments
	-moz-box-shadow arguments
	-webkit-box-shadow arguments
box-shadow_lindo()
	box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
	-o-box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
	-ms-box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
	-moz-box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
	-webkit-box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
box-shadow_lindo_reves()
	box-shadow 0px 1px 0px 0px rgba(0,0,0,0.25) inset, 0px -15px 15px 0px rgba(255,255,255,0.5) inset
	-o-box-shadow 0px 1px 0px 0px rgba(0,0,0,0.25) inset, 0px -15px 15px 0px rgba(255,255,255,0.5) inse
	-ms-box-shadow 0px 1px 0px 0px rgba(0,0,0,0.25) inset, 0px -15px 15px 0px rgba(255,255,255,0.5) inse
	-moz-box-shadow 0px 1px 0px 0px rgba(0,0,0,0.25) inset, 0px -15px 15px 0px rgba(255,255,255,0.5) inse
	-webkit-box-shadow 0px 1px 0px 0px rgba(0,0,0,0.25) inset, 0px -15px 15px 0px rgba(255,255,255,0.5) inse
box-sizing()
	box-sizing border-box
	-o-box-sizing border-box
	-ms-box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
text-shadow()
	text-shadow arguments
	-o-text-shadow arguments
	-ms-text-shadow arguments
	-moz-text-shadow arguments
	-webkit-text-shadow arguments
text-shadow_lindo()
	text-shadow 0px -1px 0px rgba(0,0,0,0.25)
	-o-text-shadow 0px -1px 0px rgba(0,0,0,0.25)
	-ms-transformtext-shadow 0px -1px 0px rgba(0,0,0,0.25)
	-moz-text-shadow 0px -1px 0px rgba(0,0,0,0.25)
	-webkit-text-shadow 0px -1px 0px rgba(0,0,0,0.25)
transform()
	transform arguments
	-o-transform arguments
	-ms-transform arguments
	-moz-transform arguments
	-webkit-transform arguments
transition()
	transition arguments
	-o-transition arguments
	-ms-transition arguments
	-moz-transition arguments
	-webkit-transition arguments
background_form()
	background: #003333;
	background: -moz-linear-gradient(left, #003333 0%, #36667c 48%, #36667c 54%, #003333 100%);
	background: -webkit-gradient(linear, left top, right top, color-stop(0%,#003333), color-stop(48%,#36667c), color-stop(54%,#36667c), color-stop(100%,#003333));
	background: -webkit-linear-gradient(left, #003333 0%,#36667c 48%,#36667c 54%,#003333 100%);
	background: -o-linear-gradient(left, #003333 0%,#36667c 48%,#36667c 54%,#003333 100%);
	background: -ms-linear-gradient(left, #003333 0%,#36667c 48%,#36667c 54%,#003333 100%);
	background: linear-gradient(to right, #003333 0%,#36667c 48%,#36667c 54%,#003333 100%);
	/*filter: unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr='#003333', endColorstr='#003333',GradientType=1 )');*/

background_header()
	background url('../img/transparent_1x1.png')
	background -moz-linear-gradient(top, rgba(255,255,153,0.63) 0%, rgba(0,102,102,0.63) 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,153,0.63)), color-stop(100%,rgba(0,102,102,0.73)))
	background -webkit-linear-gradient(top, rgba(255,255,153,0.63) 0%,rgba(0,102,102,0.63) 100%)
	background -o-linear-gradient(top, rgba(255,255,153,0.63) 0%,rgba(0,102,102,0.63) 100%)
	background -ms-linear-gradient(top, rgba(255,255,153,0.63) 0%,rgba(0,102,102,0.63) 100%)
	background linear-gradient(to bottom, rgba(255,255,153,0.76) 0%,rgba(0,102,102,0.63) 100%)
	/*filter: unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr='#baffff99', endColorstr='#ba006666',GradientType=0 )');*/
background_boton()
	background rgb(0,102,102)
	background -moz-linear-gradient(top, rgba(0,102,102,1) 0%, rgba(0,51,51,1) 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,102,102,1)), color-stop(100%,rgba(0,51,51,1)))
	background -webkit-linear-gradient(top, rgba(0,102,102,1) 0%,rgba(0,51,51,1) 100%)
	background -o-linear-gradient(top, rgba(0,102,102,1) 0%,rgba(0,51,51,1) 100%)
	background -ms-linear-gradient(top, rgba(0,102,102,1) 0%,rgba(0,51,51,1) 100%)
	background linear-gradient(to bottom, rgba(0,102,102,1) 0%,rgba(0,51,51,1) 100%)
	/*filter unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr='#006666', endColorstr='#003333',GradientType=0 )')*/
/*Los Prerender*/
@font-face
	font-family 'icomoon'
	src url('fonts/icomoon.eot?-a6mqj2')
	src url('fonts/icomoon.eot?#iefix-a6mqj2') format('embedded-opentype'),
		url('fonts/icomoon.woff?-a6mqj2') format('woff'),
		url('fonts/icomoon.ttf?-a6mqj2') format('truetype'),
		url('fonts/icomoon.svg?-a6mqj2#icomoon') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family 'Open Sans'
	font-style normal
	font-weight 400
	src: url('fonts/open-sans.eot')
	src: local('OpenSans'), url('fonts/open-sans.eot') format('embedded-opentype'), url('fonts/open-sans.ttf') format('truetype'), url('fonts/open-sans.svg#OpenSans') format('svg'), url('fonts/open-sans.woff') format('woff')
/*Las etiquetas*/
body
	background amarillo_patito
	color negro
	font-family 'Open Sans'
	font-size 16px
	text-align center

	.wrapper
		background rgba(black, 0.5) url('../img/body_bg.jpg') top left fixed repeat-y
		background-size auto 100%

		.primer_section
			background rgba(black,0.5)
			overflow hidden
			padding-bottom 1em

footer
	background verde_claro
	color blanco
	padding 1em
	text-shadow_lindo()

	.redes_sociales
		margin 1em auto

		ul
			padding 0
			margin 0

			li
				display inline-block
				a
					color blanco
					font-family 'icomoon'
					font-size 2em
					padding 0.2em
					text-decoration none
					transition(all 0.3s ease-out)

					&:hover
						color negro
					&:active
						color naranja

				.facebook
					&:before
						content "\e600"
				.feed
					&:before
						content "\e604"
				.google
					&:before
						content "\e601"
				.mail
					&:before
						content "\e602"
				.twitter
					&:before
						content "\e603"

header
	background_header()
	
	nav
		background verde_claro
		overflow hidden
		text-align left

		ul
			height 0
			margin 0
			opacity 0
			padding 0
			transition(all 0.4s ease-in-out)
			visibility hidden

			li
				
				a
					background verde_transparente
					color blanco
					display block
					font-family 'Orbitron'
					font-size 1.2em
					padding 0.7em 1em
					text-decoration none
					text-shadow_lindo()
					transition(all 0.4s ease-in-out)

					&:hover
						background negro_transparente
						box-shadow_lindo()

			.current-menu-item
			.current_page_item
				a
					background naranja
					box-shadow_lindo()

					&:hover
						color naranja
	
	#menu
		border none
		background none
		margin 0.2em
		
		img
			width 40px

	.logos
		overflow hidden

		.logo
			display inline-block
			vertical-align middle
			
			img
				width 100px
				transition(all 0.4s ease-out)
				&:hover
					opacity 0.7


		.trinidad
			display inline-block
			vertical-align middle
			
			figcaption
				color amarillo_patito
				font-family 'Orbitron'
				font-size 19px
				font-weight lighter
			img
				width 240px

section
	.slideshow_home
		position relative

		.cycle-slideshow
			border-radius(0.5em)
			box-shadow(0px 0px 12px 3px #000)
			margin 0 auto
			max-width 300px
			overflow hidden

			img
				border-radius(0.5em)
				width 100%
	
			.navegacion
				overflow hidden
				position absolute
				top 40%
				width 100%
				z-index 124
				
				a
					color negro_transparente
					display inline-block
					font-family 'icomoon'
					font-size 2em
					margin 0 0.2em
					text-decoration none
					text-shadow_lindo()

					&:hover
						color amarillo_patito
					&:active
						color naranja
						
				
				.next
					border-radius 0 9px 9px 0
					float right
					
					&:before
						content "\e605"

				.back
					border-radius 9px 0 0 9px
					float left

					&:before
						content "\e608"

	.mensaje_home
		h3
			color blanco
			font-family 'Orbitron'
			font-size 1.3em
			font-weight normal
			line-height 2em
			margin 0.5em auto
			max-width 900px
			padding 0.1em 0.5em
			&:after
			&:before
				font-size 1.5em
				font-family monospace
				
			&:after
				content ' "'
				
			&:before
				content '" '
				
/*Los ids*/
#top_bg
	background negruzco
	position absolute
	top 2em
	height 45em
	width 100%
	z-index -1

/*Las clases*/
.ir_arriba
	bottom 0.1em
	color negro_transparente
	font-family 'icomoon'
	font-size 2em
	position fixed
	right 0.2em
	text-decoration none
	&:before
		content "\e606"
	&:hover
	&:active
		color naranja

.posts
	article
		background amarillo_claro
		box-shadow_lindo_reves()
		margin 1px auto
		overflow hidden
		padding 0.5em
		position relative
		text-align left

		figure
			max-width 300px
			margin 0.5em auto
			text-align center

			figcaption
				color blanco
				margin-top 0.5em

			img
				margin-bottom -1px
				transition(all 0.4s ease-out)
				width 100%
				&:hover
					box-shadow_lindo_reves()
					opacity 0.7

		.resumen
			overflow hidden
			margin-bottom 3em

			h3
				font-family 'Orbitron'
				text-align center

			.ver_mas
				background_boton()
				border 2px solid verde_claro
				border-radius(0.5em)
				bottom 1em
				box-shadow_lindo()
				color amarillo_patito
				display inline-block
				font-family 'Orbitron'
				padding 0.3em 0.5em
				text-decoration none
				transition(all 0.4s ease-in-out)
				
				&:hover
					background naranja
					color blanco
			
			.tags
				background rgba(gray, 0.5)
				border-radius(0.2em)
				box-shadow(1px 1px 1px rgba(black, 0.5))
				color #fff
				display inline-block
				padding 0.1em 0.5em
				text-shadow

.tarifas
	.formulario
		background_form()
		border 5px solid verde_claro
		border-radius(1em)
		box-shadow(0px 0px 5px #000)
		color amarillo_patito
		margin 1em auto
		padding 1em 1.5em
		max-width 350px
		text-align left
		
		h4
			color blanco
			font-size 1.5em
			font-weight normal
			text-align center
		
		input, textarea
			background verde_claro
			border none
			display block
			font-size 1.2em
			margin 0.5em auto
			width 100%
			&:focus
				box-shadow(0px 0px 5px 5px naranja)

		input[type="date"]
			max-width 200px
			margin-left 0

		input[name="personas"] 
		input[type="submit"]
			display inline-block
			max-width 150px
			width auto

		input[type="submit"]
			background_boton()
			border 2px solid verde_claro
			border-radius(0.5em)
			bottom 1em
			box-shadow_lindo()
			color amarillo_patito
			display inline-block
			padding 0.5em 0.7em
			text-decoration none
			text-shadow_lindo()
			transition(all 0.4s ease-in-out)
			
			&:hover
				background naranja
				color blanco

	.lista_precios
		table
			color blanco



.widget_home, .posts
	article
		figure
			background_boton()
			box-shadow_lindo()
			border 4px solid verde_claro
			border-radius(1em)
			display block
			margin 1em auto
			max-width 300px
			overflow hidden
			padding 0 0 1em 0

			figcaption
				margin-top 0.5em
				
				a
					color amarillo_patito
					transition(all 0.3s ease-in-out)
					text-decoration none
					&:hover
						color blanco

			a
				transition(all 0.3s ease-in-out)
				
				img
					width 100%
					
				&:hover
					opacity 0.7

/*Las mediaqueries*/
@media screen and (min-width: 690px)
	section
		.mensaje_home
			h3
				color amarillo_patito

		.slideshow_home
			.cycle-slideshow
				max-width 640px
	
	.posts
		article
			figure
				float left
				margin 1em

			.resumen
				h3
					text-align left

		.ver_mas
			float right

	.widget_home
		article
			display inline-block
			margin 0 1em

// @media screen and (min-width: 800px)

@media screen and (min-width: 1200px)
	body
		background url('../img/body_bg.jpg') top center fixed repeat-y
		background-size 100%

		.wrapper
			background rgba(black, 0.2)
			margin 0 auto
			max-width 1200px
			position relative

			.primer_section
				background none
				padding-bottom 0

	header
		nav
			background none
			position absolute
			right 0
			top 5.5em

			ul
				display inline-block
				height auto
				opacity 1
				visibility visible

				li
					display inline-block

					a
						background none
						

			#menu
				display none

		.logos
			text-align left
			margin-left 1em

	

	section
		.mensaje_home
			padding 0 2em

		.slideshow_home
			.cycle-slideshow
				max-width 900px

	#top_bg
		top 0
	
	.posts
		max-width 95%
		margin auto